{
  "description": "Monitors uWSGI instances",
  "icon": "statpro.png",
  "command": "python -u boundary_uwsgi_plugin/plugin.py",
  "metrics": [
    "UWSGI_WORKER_RSS",
    "UWSGI_WORKER_AVG_RT",
    "UWSGI_WORKER_TX",
    "UWSGI_WORKER_REQUESTS"
  ],
  "dashboards": [{"name": "uWSGI",
                  "layout":
                  "d-w=2&d-h=2&d-pad=5&d-bg=none&d-g-UWSGI_WORKER_REQUESTS=0-0-1-1&d-g-UWSGI_WORKER_AVG_RT=1-0-1-1&d-g-UWSGI_WORKER_RSS=0-1-1-1&d-g-UWSGI_WORKER_TX=1-1-1-1"}],
  "paramSchema": [
    {
      "title": "Poll Interval",
      "name": "uwsgi_poll_interval",
      "description": "Interval between sends (milliseconds)",
      "type": "integer",
      "default": "1000",
      "required": true
    }
  ]
}
